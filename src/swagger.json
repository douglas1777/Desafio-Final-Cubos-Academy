{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "PDV (Frente de Caixa)",
        "description": "API que permite: Cadastrar, detalhar, editar usuário logado e listar categorias, alem de manipulação de dados de clientes e produtos"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/usuarios": {
            "post": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Cadastro de usuário",
                "description": "Endpoint responsavel por cadastrar um novo usuário no sistema",
                "requestBody": {
                    "description": "Dados do novo usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Usuario"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Detalhes do usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Já existe usuário cadastrado com o e-mail informado"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Endpoint para realizar login na API",
                "description": "Este endpoint é responsável por autenticar um usuário na API e retornar um token de acesso válido por um determinado período de tempo.",
                "security": {
                    "bearerAuth": []
                },
                "requestBody": {
                    "description": "Objeto com as informações de login do usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Os dados de login estão incorretos."
                    },
                    "401": {
                        "description": "O usuário não está autorizado a acessar a API."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/": {
            "get": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Endpoint para obter os detalhes do usuário",
                "security": {
                    "bearerAuth": []
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes do usuário",
                        "schema": {
                            "$ref": "#/components/schemas/UsuarioDetalhes"
                        }
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/categorias": {
            "get": {
                "tags": [
                    "Transações"
                ],
                "summary": "Endpoint para listar todas as categorias de transações disponíveis na API",
                "security": {
                    "bearerAuth": []
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Lista de categorias de transações",
                        "schema": {
                            "$ref": "#/components/schemas/Categoria"
                        }
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario": {
            "put": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Endpoint para editar os detalhes do usuário",
                "security": {
                    "bearerAuth": []
                },
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Novos detalhes do usuário",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/UsuarioEdicao"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes do usuário atualizados",
                        "schema": {
                            "$ref": "#/components/schemas/UsuarioDetalhes"
                        }
                    },
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/produto": {
            "post": {
                "tags": [
                    "Produto"
                ],
                "summary": "Endpoint para cadastrar um novo produto no sistema",
                "description": "Este endpoint é responsável por cadastra um novo produtos no sistema levando em consideração o id apropiado da categoria ao mesmo.",
                "security": {
                    "bearerAuth": []
                },
                "requestBody": {
                    "description": "Objeto com as informações do produto",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NovoProduto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produto cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": " Requisição inválida, algum campo obrigatório não foi informado."
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/produto/id": {
            "put": {
                "tags": [
                    "Produto"
                ],
                "summary": "Endpoint para atualizar as informações de um  produto no sistema",
                "description": "Este endpoint é responsável por atualizar produtos no sistema levando em consideração o id apropiado ao mesmo.",
                "security": {
                    "bearerAuth": []
                },
                "requestBody": {
                    "description": "Objeto com as informações do produto",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Produto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produto atualizado com sucesso."
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "400": {
                        "description": "Todos os campos são obrigatórios "
                    },
                    "404": {
                        "description": "Produto inexistente e ou Categoria inexistente "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/produto?filtro[categoria_id]": {
            "get": {
                "tags": [
                    "Produto"
                ],
                "summary": "Endpoint para listar as informações de um produto cadastrado por categoria no sistema. ",
                "security": {
                    "bearerAuth": []
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "categoria_id",
                        "description": "ID da categoria a ser exibido",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Lista de produtos de acordo com a categoria informada",
                        "schema": {
                            "$ref": "#/components/schemas/Produto"
                        }
                    },
                    "201": {
                        "description": "Lista de todos os produtos pois a categoria não foi informada",
                        "schema": {
                            "$ref": "#/components/schemas/Produto"
                        }
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/produto/ id": {
            "get": {
                "tags": [
                    "Produto"
                ],
                "summary": "Endpoint para detalhar produto",
                "description": "Rota para obter os detalhes de um produto cadastrado pelo usuário logado.",
                "security": {
                    "bearerAuth": []
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "ID do produto a ser exibido",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Produto não encontrado."
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/produto / id": {
            "delete": {
                "tags": [
                    "Produto"
                ],
                "summary": "Endpoint para excluir produto",
                "description": "Rota para excluir um produto cadastrado pelo usuário logado.",
                "security": {
                    "bearerAuth": []
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "ID do produto a ser excluído",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Produto excluido com sucesso."
                    },
                    "400": {
                        "description": "Produto não encontrado."
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/cliente": {
            "post": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Endpoint para cadastro de cliente",
                "description": "Endpoint responsavel por cadastrar um novo cliente no sistema",
                "security": {
                    "bearerAuth": []
                },
                "requestBody": {
                    "description": "Dados do novo cliente",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NovoCliente"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Detalhes do usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cliente"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Já existe usuário cadastrado com o e-mail informado"
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "404": {
                        "description": "Todos os campos são obrigatórios "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/cliente/:id": {
            "put": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Endpoint para editar os dados de um cliente",
                "security": {
                    "bearerAuth": []
                },
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Novos detalhes do usuário",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/Cliente"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente atualizado com sucesso"
                    },
                    "400": {
                        "description": "Nome, email, cpf são obrigatórios"
                    },
                    "404": {
                        "description": "Email ou Cpf ja existentes"
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/ cliente": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Endpoint para listar todos os clientes cadastrados ",
                "security": {
                    "bearerAuth": []
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Produto cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cliente"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/cliente/ id": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Endpoint para detalhar cliente",
                "description": "Rota para obter os detalhes de um cliente cadastrado pelo usuário logado.",
                "security": {
                    "bearerAuth": []
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "ID do cliente a ser exibido",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cliente"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Cliente não encontrado."
                    },
                    "401": {
                        "description": "Não  autorizado "
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "José"
                    },
                    "email": {
                        "type": "string",
                        "example": "jose@example.com"
                    },
                    "senha": {
                        "type": "string",
                        "example": "123456"
                    }
                }
            },
            "Login": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "johndoe@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password123"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string"
                    },
                    "expiresIn": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            },
            "UsuarioDetalhes": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "José"
                    },
                    "email": {
                        "type": "string",
                        "example": "jose@mail.com"
                    },
                    "endereco": {
                        "type": "string",
                        "example": "Rua 1, nº 123"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "(11) 1234-5678"
                    }
                }
            },
            "UsuarioEdicao": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "José"
                    },
                    "endereco": {
                        "type": "string",
                        "example": "Rua 1, nº 123"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "(11) 1234-5678"
                    }
                }
            },
            "Categoria": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "01"
                    },
                    "descricao": {
                        "type": "string",
                        "example": "Informática"
                    }
                }
            },
            "NovoProduto": {
                "type": "object",
                "properties": {
                    "descricao": {
                        "type": "string",
                        "example": "Teclado"
                    },
                    "quantidade_estoque": {
                        "type": "string",
                        "example": "12"
                    },
                    "valor": {
                        "type": "string",
                        "example": "3000"
                    },
                    "categoria_id": {
                        "type": "string",
                        "example": "3"
                    }
                }
            },
            "Produto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "23"
                    },
                    "descricao": {
                        "type": "string",
                        "example": "Teclado"
                    },
                    "quantidade_estoque": {
                        "type": "string",
                        "example": "12"
                    },
                    "valor": {
                        "type": "string",
                        "example": "3000"
                    },
                    "categoria_id": {
                        "type": "string",
                        "example": "3"
                    }
                }
            },
            "NovoCliente": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "José"
                    },
                    "email": {
                        "type": "string",
                        "example": "José@email.com"
                    },
                    "cpf": {
                        "type": "string",
                        "example": "26727538864"
                    },
                    "cep": {
                        "type": "string",
                        "example": "13567140"
                    },
                    "rua": {
                        "type": "string",
                        "example": "Rua Tapajós"
                    },
                    "numero": {
                        "type": "string",
                        "example": "55"
                    },
                    "bairro": {
                        "type": "string",
                        "example": "San Cristovan"
                    },
                    "cidade": {
                        "type": "string",
                        "example": "São Paulo"
                    },
                    "estado": {
                        "type": "string",
                        "example": "SP"
                    }
                }
            },
            "Cliente": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "01"
                    },
                    "nome": {
                        "type": "string",
                        "example": "José"
                    },
                    "email": {
                        "type": "string",
                        "example": "José@email.com"
                    },
                    "cpf": {
                        "type": "string",
                        "example": "26727538864"
                    },
                    "cep": {
                        "type": "string",
                        "example": "13567140"
                    },
                    "rua": {
                        "type": "string",
                        "example": "Rua Tapajós"
                    },
                    "numero": {
                        "type": "string",
                        "example": "55"
                    },
                    "bairro": {
                        "type": "string",
                        "example": "San Cristovan"
                    },
                    "cidade": {
                        "type": "string",
                        "example": "São Paulo"
                    },
                    "estado": {
                        "type": "string",
                        "example": "SP"
                    }
                }
            }
        }
    }
}